{
  "name": "grez-tracker",
  "displayName": "GREZ Tracker",
  "description": "The Unified Developer Wellness & Productivity Hub",
  "version": "1.0.0",
  "publisher": "Angad",
  "engines": {
    "vscode": "^1.109.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "grez.login",
        "title": "GREZ: Login to Dashboard"
      },
      {
        "command": "grez.status",
        "title": "GREZ: Check Sync Status"
      },
      {
        "command": "grez.openDashboard",
        "title": "GREZ: Open Web Dashboard"
      }
    ],
    "configuration": {
      "title": "GREZ Tracker Settings",
      "properties": {
        "grez.heartbeatInterval": {
          "type": "number",
          "default": 120000,
          "description": "Interval between heartbeats in milliseconds (default 2 mins)."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.109.0",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0"
  },
  "dependencies": {
    "axios": "^1.13.5",
    "dotenv": "^17.3.1"
  }
}